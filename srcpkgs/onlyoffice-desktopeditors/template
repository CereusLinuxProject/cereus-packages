checksum=91762fbca4541b09907e0b8629a3a079d38ceeb2ec0085eb0d396172c876ecaf
nostrip=yes

do_extract() {
    mkdir -p ${DESTDIR}
    ar x ${XBPS_SRCDISTDIR}/${pkgname}-${version}/onlyoffice-desktopeditors_amd64.deb
}

do_install() {
    tar -xf data.tar.xz -C ${DESTDIR}
}
